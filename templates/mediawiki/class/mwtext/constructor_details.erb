<div id="constructor_details" class="method_details_list">
  === Constructor Details ===

  <% if @ctor.namespace != object %>
    <p class="notice">This class inherits a constructor from <%= linkify @ctor, @ctor.namespace.path %></p>
  <% else %>
    <%= yieldall :object => @ctor, :index => 0 %>
  <% end %>
</div>
